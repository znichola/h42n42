  let _ = Dom_html.addEventListener 
    window 
    (Dom_html.Event.mousemove)
    (Dom_html.handler (fun evt -> 
      global.mouse_x <- evt##.clientX;
      global.mouse_y <- evt##.clientY;
      Js._true))
    Js._false
  in
